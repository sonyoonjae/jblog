<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="blog">

    
    <!-- 블로그정보저장 -->
	<insert id="insertBlog" parameterType="com.javaex.vo.BlogVo">
		<![CDATA[
			insert into jblog
			values(#{userNo}, 
			       #{blogTitle}, 
			       #{logoFile}
			)
		]]>
	</insert>

	<!-- 블로그정보 가졍오기 -->
	<select id="selectBlogById" parameterType="string" resultType="com.javaex.vo.BlogVo">
		<![CDATA[
			select u.id, b.userNo, b.blogTitle, b.logoFile
			  from users u,
			       jblog b
			 where u.userNo = b.userNo
			   and u.id = #{userId}      
		]]>
	</select>

	<!-- 블로그 기본설정페이지 수정 -->
	<!-- 첨부파일은 변동사항이 있을때만 업데이트 -->
	<select id="updateBlog" parameterType="com.javaex.vo.BlogVo">
		<![CDATA[
			update jblog
			set blogTitle = #{blogTitle}
		]]>
			<if test="logoFile !=null and logoFile !='' ">
			    , logoFile = #{logoFile}
			</if>	
		<![CDATA[
			where userNo = #{userNo}
		]]>
	</select>

	
</mapper>